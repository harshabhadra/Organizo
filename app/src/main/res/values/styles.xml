<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/drawerArrow</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="alertDialogTheme">@style/loadingAlertDialog</item>
        <item name="android:titleTextAppearance">@font/hind_siliguri_bold</item>
    </style>

    <style name="loadingAlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="drawerArrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="homeFav" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorButton</item>
        <item name="elevation">@dimen/favElevation</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="tint">@android:color/white</item>
    </style>
    <style name="Organizo.taskfab" parent="homeFav">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="fabSize">mini</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/drawerArrow</item>
        <item name="android:statusBarColor">@color/statusBar</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="errorTextColor">@android:color/holo_red_dark</item>
        <item name="android:elevation">16dp</item>
    </style>
    <style name="TextInputLayout.SignUp" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="hintTextColor">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="errorTextColor">@android:color/holo_red_dark</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="LogInButtonAppearence" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/colorButton</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:textSize">16sp</item>
        <item name="elevation">16dp</item>
        <item name="android:fontFamily">@font/alfa_slab_one</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="Organizo.spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:text">@string/select_category</item>
        <item name="android:fontFamily">@font/hind_siliguri_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="Organizo.addTaskToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@android:color/white</item>
        <item name="titleTextColor">@android:color/black</item>
    </style>

    <style name="LogInTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Organizo.selectButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/white</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <style name="Organizo.editText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/hind_siliguri_bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColorHint">@color/colorHintText</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
